<!DOCTYPE html>
<html>
  <head>
    <title>Onstgram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>


    <header>
      <%= link_to "投稿一覧", pictures_path %>
      <% if logged_in? %>
        <%= link_to "プロフィール", user_path(current_user.id) %>
        <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
      <% else %>
        <%= link_to "サインアップ", new_user_path %>
        <%= link_to "ログイン", new_session_path %>
      <% end %>
      <% if current_user.present? %>
        <%= link_to "お気に入り一覧", star_users_path %>
      <% end %>
    </header>
    <p id="notice"><%= notice %></p>
    <%= yield %>
  </body>
</html>
